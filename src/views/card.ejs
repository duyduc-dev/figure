<div class="page-heading header-text">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h3>Giỏ hàng</h3>
        <span class="breadcrumb"><a href="/">Trang chủ</a> > Shop</span>
      </div>
    </div>
  </div>
</div>
<div class="section px-5">
  <div class="cart-list">
    <div class="cart-items mt-3">
      <!-- Example Item -->
      <div
        class="d-flex justify-content-between align-items-center border-bottom py-2"
      >
        <div class="d-flex w-100 justify-content-between cart-item">
          <div class="d-flex">
            <img src="product.jpg" alt="Product Image" class="img-fluid" />
            <div class="details">
              <h5 class="mb-1">Product Name</h5>
              <p class="mb-1">$19.99</p>
              <input
                type="number"
                class="form-control"
                value="1"
                min="1"
                style="width: 80px"
              />
            </div>
          </div>
          <div><button class="btn btn-danger">Remove</button></div>
        </div>
      </div>
      <!-- Add more items here -->
    </div>
  </div>

  <div class="total-price d-flex justify-content-end mt-3">
    <h5 class="total-cart-price">Total: $19.99</h5>
  </div>

  <div class="cart-actions d-flex justify-content-between mt-3">
    <button class="btn btn-primary">Update Cart</button>
    <button class="btn btn-success">Checkout</button>
  </div>

  <div class="empty-cart mt-5">
    <p>
      Your cart is empty. <a href="#" class="btn btn-link">Continue shopping</a>
    </p>
  </div>
</div>
