<div class="page-heading header-text">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h3>Shop của chúng tôi</h3>
        <span class="breadcrumb"><a href="/">Trang chủ</a> > Shop</span>
      </div>
    </div>
  </div>
</div>

<div class="section trending">
  <div class="container">
    <ul class="trending-filter">
      <li>
        <a class="is_active" href="#!" data-filter="*">Tất cả</a>
      </li>
      <li>
        <a href="#!" data-filter=".adv">HH3D</a>
      </li>
      <li>
        <a href="#!" data-filter=".str">Manga</a>
      </li>
      <li>
        <a href="#!" data-filter=".rac">Gundam</a>
      </li>
    </ul>
    <div class="row trending-box">
      <% for (let i = 0; i < products.length; i++) { %>
      <div
        class="col-lg-3 col-md-6 align-self-center mb-30 trending-items col-md-6 <%= products[i].type %>"
      >
        <div class="item">
          <div class="thumb">
            <a href="/product-detail?id=<%= products[i].id %>">
              <img src="<%= products[i].img %>" alt=""
            /></a>
            <span class="price"><%= products[i].price %></span>
          </div>
          <div class="down-content">
            <span class="category"><%= products[i].category %></span>
            <h4><%= products[i].title %></h4>
            <a href="/product-detail?id=<%= products[i].id %>"
              ><i class="fa fa-shopping-bag"></i
            ></a>
          </div>
        </div>
      </div>
      <% } %>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <ul class="pagination">
          <li><a href="#"> &lt; </a></li>
          <li><a class="is_active" href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#"> &gt; </a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
